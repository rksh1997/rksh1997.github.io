---
import LinkButton from "./LinkButton.astro";
import socialIcons from "@assets/socialIcons";

const URL = Astro.url;

const shareLinks = [
  {
    id: "WhatsApp",
    name: "واتساب",
    href: "https://wa.me/?text=",
    linkTitle: `شارك على WhatsApp`,
  },
  {
    id: "Facebook",
    name: "فيسبوك",
    href: "https://www.facebook.com/sharer.php?u=",
    linkTitle: `شارك Facebook`,
  },
  {
    id: "Twitter",
    name: "اكس",
    href: "https://twitter.com/intent/tweet?url=",
    linkTitle: `شارك على X`,
  },
  {
    id: "Telegram",
    name: "تلغرام",
    href: "https://t.me/share/url?url=",
    linkTitle: `شارك على Telegram`,
  },
  {
    id: "Pinterest",
    name: "بينترست",
    href: "https://pinterest.com/pin/create/button/?url=",
    linkTitle: `شارك على Pinterest`,
  },
  {
    id: "Mail",
    name: "البريد الإلكتروني",
    href: "mailto:?subject=اقرأ%20هذه%20المقالة&body=",
    linkTitle: `شارك على email`,
  },
] as const;
---

<div class={`social-icons`}>
  <span class="italic">شارك المقالة على:</span>
  <div class="text-center">
    {
      shareLinks.map(social => (
        <LinkButton
          href={`${social.href + URL}`}
          className="link-button"
          title={social.linkTitle}
        >
          <Fragment set:html={socialIcons[social.id]} />
          <span class="sr-only">{social.linkTitle}</span>
        </LinkButton>
      ))
    }
  </div>
</div>

<style>
  .social-icons {
    @apply flex flex-col flex-wrap items-center justify-center gap-1 sm:items-start;
  }
  .link-button {
    @apply scale-90 p-2 hover:rotate-6 sm:p-1;
  }
</style>
